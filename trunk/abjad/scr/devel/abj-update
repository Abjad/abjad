#! /usr/bin/env python

from abjad import ABJCFG
from abjad.tools import iotools
from abjad.tools.iotools._update_docs_release_string import _update_docs_release_string
import os


# find start directory and project root
start_directory = os.path.abspath('.')
project_root = ABJCFG.ABJAD_PATH.rstrip('abjad')

# svn update
os.chdir(project_root)
iotools.clear_terminal()
iotools.spawn_subprocess('svn update')
os.chdir(start_directory)

# remove Abjad *.pyc files, __pycache__ directories and tmp* files
iotools.spawn_subprocess('ajv clean {}'.format(project_root))
